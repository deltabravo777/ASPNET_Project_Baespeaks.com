@model IEnumerable<Blueprint>

@{
    var ordered = Model.OrderByDescending(p => p.Rank);
}

<h5>List of Articles Under Development</h5>
<div class="container">
    <div class="d-grid justify-content-between">
        <div class="card-group">
            @foreach (var blueprint in ordered)
            {
                var photoPath = "~/images/" + (blueprint.PhotoPath ?? "noimage.jpg");
                <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                    <div class="card-header">
                        <h3>@blueprint.Title</h3>
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <img class="card-img-top imageThumbnail" src=@photoPath asp-append-version="true" />
                        <div class="card-footer text-center align-baseline">
                            <a asp-controller="Portfolio" asp-action="DetailsBlueprint" asp-route-id="@blueprint.Id"
                               class="btn btn-outline-primary m-1">View</a>
                            <a asp-controller="Portfolio" asp-action="EditBlueprint" asp-route-id="@blueprint.Id"
                               class="btn btn-outline-primary m-1">Edit</a>
                            <!--<a href="#"
                                class="btn btn-danger m-1">Delete</a>-->
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>