@model BlueprintCreateViewModel
@inject IDatabaseRepository _databaseRepository
@{
    ViewBag.Title = "Create Blueprint";
}

<div>
    <p>Current top rank is @ViewBag.MaxRank</p>
</div>

<form enctype="multipart/form-data" asp-controller="Portfolio" asp-action="CreateBlueprint" method="post" class="mt-3">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row customSmallPadding">
        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row customSmallPadding">
        <label asp-for="BlueprintBody" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="BlueprintBody" class="form-control" placeholder="BlueprintBody" rows="7"></textarea>
            <span asp-validation-for="BlueprintBody" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row customSmallPadding">
        <label asp-for="Rank" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Rank" class="form-control" placeholder="Rank, double" />
            <span asp-validation-for="Rank" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row customSmallPadding">
        <label asp-for="Category" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Category" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<BlueprintCategories>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row customSmallPadding">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input multiple asp-for="Photo" class="form-control custom-file-input" type="file" placeholder="Choose File..." />
            </div>
        </div>
    </div>

    <div>
        <button type="submit" class="btn btn-primary m-1">Create</button>
    </div>

