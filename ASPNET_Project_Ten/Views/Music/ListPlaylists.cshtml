@using System.ComponentModel.DataAnnotations;
@model IEnumerable<Playlist>

@{
    var ordered = Model.OrderByDescending(x => x.Rank);
}

<div class="container">
    
    <div class="row">
        @foreach (var playlist in ordered)
        {
