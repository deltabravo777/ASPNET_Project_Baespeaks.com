                            .bgimg {
                                background-image: url('Url.Content(photoPath)');
                            }
                    </style>
                }
            -->
            // <img class="imageThumbnail" src=@photoPath asp-append-version="true" />
            string photoPath = "~/images/" + (playlist.PhotoPath ?? "");
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12" style="padding:10px">
                <div class="card border-0" style="        height: 200px;
                                    background: url('@Url.Content(photoPath)');
                                    background-repeat: no-repeat;
                                    -webkit-background-size: cover;
                                    -moz-background-size: cover;
                                    -o-background-size: cover;
                                    background-size: cover;
                                    background-position: center;"
                            >
                    <!--  -->
                    <div class="card-body">
                        <br />
                        <a class="card-title d-flex justify-content-center text-center"
                           asp-controller="Music" asp-action="DetailsPlaylist" asp-route-id="@playlist.EncryptedId">
                            <h4 class="outlinedText">@playlist.Title</h4>
                        </a>
                        <!--
                        <p class="text-secondary d-flex justify-content-center" style="margin-bottom:0.5rem !important">---</p>
